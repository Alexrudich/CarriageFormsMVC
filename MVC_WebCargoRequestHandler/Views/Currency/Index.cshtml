@model IEnumerable<MVC_WebCargoRequestHandler.Models.Currencies>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@
<br />

<p>
    @Html.ActionLink("Добавить новую валюту", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurrencyName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyName)
            </td>
            <td>
                @Html.ActionLink("Правка", "Edit", new { id = item.CurrencyID }) @*|
                @Html.ActionLink("Удалить", "Delete", new { id = item.CurrencyID })*@
            </td>
        </tr>
    }

</table>
